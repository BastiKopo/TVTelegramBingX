# Mandatory Telegram configuration
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Optional shared secret for TradingView webhooks
TRADINGVIEW_WEBHOOK_SECRET=

# Enable webhook server (set to true/false)
TRADINGVIEW_WEBHOOK_ENABLED=false
# Bind address and port for the webhook (defaults shown)
TRADINGVIEW_WEBHOOK_HOST=0.0.0.0
TRADINGVIEW_WEBHOOK_PORT=443
# TLS settings (provide paths when using HTTPS)
# Alternatively set TLS_CERT_PATH / TLS_KEY_PATH if your host exposes those.
TRADINGVIEW_WEBHOOK_SSL_CERTFILE=
TRADINGVIEW_WEBHOOK_SSL_KEYFILE=
TRADINGVIEW_WEBHOOK_SSL_CA_CERTS=

# BingX API credentials (required only for live trading)
BINGX_API_KEY=
BINGX_API_SECRET=
BINGX_BASE_URL=https://open-api.bingx.com
BINGX_RECV_WINDOW=5000

# Set to true to avoid sending real orders
DRY_RUN=true
