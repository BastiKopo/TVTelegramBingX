TRADINGVIEW_WEBHOOK_ENABLED=false
TRADINGVIEW_WEBHOOK_SECRET=choose-a-strong-secret
#TRADINGVIEW_WEBHOOK_HOST=0.0.0.0
#TRADINGVIEW_WEBHOOK_PORT=8443

# ------------------------------
# Behaviour toggles
# ------------------------------
DRY_RUN=false
